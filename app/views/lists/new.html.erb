<div
  class="bg-image d-flex justify-content-center align-items-center opacity-75"
  style="
    background-image: url('https://images.pexels.com/photos/1307929/pexels-photo-1307929.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1');
    height: 100vh;
    background-size: cover;
    background-position: center
  "
>
  <div class="col-12 col-md-6 offset-lg-3">
    <div class="bg-white rounded p-4 shadow">
      <h3>Create a new list</h3>
      <%= simple_form_for @list do |f| %>
        <%= f.input :name, placeholder: 'Movie' %>
        <%= f.submit class: 'btn btn-flat' %>
      <% end %>
      <a href="/lists">Back</a>
    </div>
  </div>
</div>
